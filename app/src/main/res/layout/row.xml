<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <!-- Code pegs -->
    <LinearLayout
        android:id="@+id/container_codePegs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <!-- Hint pegs -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/peg_code"
        android:layout_marginLeft="4dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/container_hintPegs"
            android:layout_width="@dimen/peg_code"
            android:layout_height="@dimen/peg_code"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/container_hintPegs1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/container_hintPegs2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" />
        </LinearLayout>

        <!-- OK button -->
        <Button
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/container_hintPegs"
            android:layout_alignLeft="@id/container_hintPegs"
            android:layout_alignRight="@id/container_hintPegs"
            android:layout_alignTop="@id/container_hintPegs"
            android:background="@drawable/btn_bg"
            android:enabled="false"
            android:text="@android:string/ok"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>
